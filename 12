[Test]
public void Login_WithInvalidPassword_ShouldFail()
{
    var passwordService = new PasswordService();
    var hash = passwordService.HashPassword("CorrectPassword");

    bool result = passwordService.VerifyPassword("WrongPassword", hash);

    Assert.IsFalse(result);
}


[Test]
public void Login_WithValidPassword_ShouldSucceed()
{
    var passwordService = new PasswordService();
    var hash = passwordService.HashPassword("Secure123");

    bool result = passwordService.VerifyPassword("Secure123", hash);

    Assert.IsTrue(result);
}

[Test]
public void User_WithUserRole_ShouldNotAccessAdmin()
{
    string userRole = "User";
    string requiredRole = "Admin";

    Assert.AreNotEqual(requiredRole, userRole);
}
